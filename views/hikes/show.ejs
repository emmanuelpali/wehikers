<%- layout('layouts/boilerplate') %>

<script src='https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.js'></script>
<link href='https://api.mapbox.com/mapbox-gl-js/v2.7.0/mapbox-gl.css' rel='stylesheet' />


<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  <div class="col-md-6">
    <div class="card">
    <div
      id="carouselControls"
      class="carousel slide"
      data-bs-ride="carousel"
    >
      <div class="carousel-inner">
        <% singlehike.images.forEach((img, i) => { %>
        <div class="carousel-item  <%= i === 0 ? "active"
        : "" %>">
          <img src="<%= img.url %>" class="card-img-top d-block w-100 " alt="" />
        </div>
        <% }) %>
      </div>
      <% if(singlehike.images.length > 1) { %> 
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselControls"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselControls"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      <% } %>
    </div>
    <div class="card mb-3">
      <h1><%= singlehike.title %></h1>
      
      <p>Created by: <%= singlehike.author.username %></p>
      <p><%= singlehike.description %></p>
      <p><%= singlehike.location %></p>
      <div id='map' style='width: 100%; height: 300px;'></div>
      <% if(currentUser && singlehike.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/hikes/<%= singlehike._id %>/edit"
          class="btn"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/hikes/<%= singlehike._id %>?_method=delete"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <a class="btn btn-info" href="/hikes">Back to all Hikes</a>
    </div>
  </div>
  </div>

  <div class="col-md-6">
    <% if(currentUser){ %>
    <form
      action="/hikes/<%= singlehike._id %>/review"
      method="POST"
      novalidate
      class="mb-3 needs-validation"
    >
      <h2>Leave a Review</h2>
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="0"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="review">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="review"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide a review.</div>
      </div>

      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>
    <h2>Reviews</h2>
    <% for(let review of singlehike.reviews) { %>
    <div class="card card-body mb-3">
      <p class="starability-result" data-rating="<%=review.rating%>">
        Rated: <%=review.rating%> stars
      </p>
      <h6 class="card-subtitle mb-2 text-muted">
        By: <%= review.author.username %>
      </h6>
      <p class="card-text">Review: <%= review.body %></p>
      <% if(currentUser && review.author.equals(currentUser._id)) { %>
      <form
        action="/hikes/<%= singlehike._id %>/review/<%= review._id %>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-sm btn-danger">Delete</button>
      </form>
      <% } %>
    </div>
    <% } %>
  </div>
</div>
<script >
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const hikelocation = "<%- JSON.stringify(singlehike) %>";
</script>
<script src="/js/showMap.js"></script>