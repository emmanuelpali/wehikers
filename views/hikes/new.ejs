<%- layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Hike</h1>
  <div class="col-6 offset-3">
    <form
      action="/hikes"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="hike[title]"
          id="title"
          required
        />
        <div class="invalid-feedback">Please provide a Title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="textarea"
          name="hike[description]"
          id="description"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide a description.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="images">Image Url</label>
        <input
          class="form-control"
          type="file"
          name="images"
          id="images"
          multiple
          min="1"
          max="2"
          required
        />
        <div class="invalid-feedback">Please provide a image url.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="hike[location]"
          id="location"
          required
        />
        <div class="invalid-feedback">Please provide a location.</div>
      </div>
      <button class="btn btn-success mb-3">Submit</button>
    </form>
    <a href="/hikes">Cancel</a>
  </div>
</div>
