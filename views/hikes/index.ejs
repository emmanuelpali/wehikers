<%- layout('layouts/boilerplate') %>
<h1>Hikes in Vancouver</h1>
<a href="/hikes/new">Add a new hike</a>
<% for (let hike of hikes) { %>
<div class="card shadow mb-3">
  <div class="row">
    <div class="col-md-6">
      <img class="img-fluid" src="<%=hike.images[0].url%>" alt="" />
    </div>
    <div class="col-md-6 mx-auto">
      <div class="card-body">
        <h5 class="card-title"><%= hike.title %></h5>
        <p class="card-text"><%= hike.description%></p>
        <p class="card-text">
          <small class="text-muted"><%= hike.location%></small>
        </p>
        <a class="btn btn-primary" href="/hikes/<%=hike._id%>">View</a>
      </div>
    </div>
  </div>
</div>
<% } %>
