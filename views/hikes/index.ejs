<%- layout('layouts/boilerplate') %>
<h1>Where We Have Been</h1>
<a href="/hikes/new">Add a new hike</a>
<div class="row">
<% for (let hike of hikes) { %>
<div class="shadow mb-3 col-md-6">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <img class="img-fluid" src="<%=hike.images[0].url%>" alt="" />
    </div>
    <div class="col-md-6 mx-auto">
      <a class="text-decoration-none" href="/hikes/<%=hike._id%>">
      <div class="card-body">
        <h5 class="card-title"><%= hike.title %></h5>
        <p class="card-text"><%= hike.description%></p>
        <p class="card-text">
          <small class="text-muted"><%= hike.location%></small>
        </p>
      </div>
      </a>
    </div>
  </div>
</div>
<% } %>
</div>
