<%- layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Hike</h1>
  <div class="col-6 offset-3">
    <form
      action="/hikes/<%=singlehike._id%>?_method=put"
      method="POST"
      novalidate
      class="needs-validation mb-3"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="hike[title]"
          id="title"
          value="<%= singlehike.title  %>"
          required
        />
        <div class="invalid-feedback">Please provide a title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          name="hike[description]"
          id="description"
          value="<%= singlehike.description  %>"
          required
        />
        <div class="invalid-feedback">Please provide a description.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="hike[location]"
          id="location"
          value="<%= singlehike.location  %>"
          required
        />
        <div class="invalid-feedback">Please provide a location.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="images">Update Images</label>
        <input
          class="form-control"
          type="file"
          name="images"
          id="images"
          multiple
        />
        <div class="invalid-feedback">Please provide a image type.</div>
      </div>
      <div class="mb-3">
        <% singlehike.images.forEach((img, i) => { %>
        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%= i %>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
        </div>
        <label for="image-<%= i %>">Delete</label>
        <% }) %>
      </div>
      <button class="btn btn-success">Update Hike</button>
    </form>
    <a class="btn btn-warning" href="/hikes/<%=singlehike._id%>">Cancel</a>
  </div>
</div>
